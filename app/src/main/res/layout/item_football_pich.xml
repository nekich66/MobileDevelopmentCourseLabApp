<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gates"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/football_gates" />
    <ImageView
        android:id="@+id/target"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/football_target"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintTop_toTopOf="@id/gates"
        app:layout_constraintBottom_toBottomOf="@id/gates"
        app:layout_constraintStart_toStartOf="@id/gates"
        app:layout_constraintEnd_toEndOf="@id/gates" />

</androidx.constraintlayout.widget.ConstraintLayout>